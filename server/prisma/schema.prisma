datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt  DateTime  @default(now())
  customerId BigInt?   @unique
  email      String?   @unique
  firstName  String?
  id         String    @id @default(cuid())
  lastLogin  DateTime?
  lastName   String?
  password   String
  roles      Json
  updatedAt  DateTime  @updatedAt
  username   String    @unique
}
